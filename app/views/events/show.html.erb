<h2 class = 'text-center mt-4'><%=@event.title%></h2>

  <div class = 'container'>
    <div class = 'row justify-content-md-center'>
      <div class = 'col-8 mt-4'>
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            created by <%= @event.creator.username%>
          </div>
          <div class="card-body">
            <div class="card-text text-center"><%= simple_format(@event.description) %></div>
            <div class="text-dark">Event Date: <%= @event.date%></div>
          </div>
          <div class="card-body">
            <p class="align-self-center text-dark">Number of people attending: <%= @event.attendees.count%></p>
            <% if @event.attendees.count == 0 %>
              <%"Nothing to show"%>
              <% else %>
              <h6 class="text-dark">List of names:</h6>
              <% @event.attendees.each do |attendee|%>
                <ul class="list-unstyled text-dark">
                  <li><%= attendee.username%></li>
                </ul>
              <% end %>
            <%end%>
          </div>
        </div>
        </div>
    </div>
  </div>


