<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @event %>
      <%= form_with(model: @event, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        
        <div class="form-group row">
          <%= f.label :event_title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Description" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :creation_Date, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_field :date, class:"form-control datepicker shadow rounded"%>
          </div>
        </div>
        <div class="actions form-group row justify-content-center">
          <%= f.submit "Submit", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
    </div>
  </div>
</div> 